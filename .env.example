# --- Authentication ---
POSTGRESQL_USERNAME=your_username
POSTGRESQL_PASSWORD=your_password
POSTGRESQL_POSTGRES_PASSWORD=postgres_superuser_password

# --- Security ---
# Remove unsafe auth methods from pg_hba.conf
POSTGRESQL_PGHBA_REMOVE_FILTERS=trust,peer
# Allow connections from outside the container
POSTGRESQL_ALLOW_REMOTE_CONNECTIONS=yes

# --- Performance ---
# SQL query timeout in milliseconds
POSTGRESQL_STATEMENT_TIMEOUT=30000
# Maximum number of database connections
POSTGRESQL_MAX_CONNECTIONS=100
# Connection limit per user
POSTGRESQL_USERNAME_CONNECTION_LIMIT=10

# --- Network ---
# Host port mapped to PostgreSQL
PORT=5432
# External network for monitoring tools (Coolify shared variable)
NETWORK_MONITORING=monitoring
# External network for sharing database between projects (Coolify shared variable)
NETWORK_DATABASE=shared-postgres
